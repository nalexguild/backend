@page
@model FinalProyect.Pages.AsignacionConferenciasModel

<h1>Registro de Asistencia</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <form method="post">
                        <div class="form-group">
                            <label for="ConferenciaId">Conferencia:</label>
                            <input type="text" class="form-control" id="ConferenciaId" asp-for="NombreConferencia" readonly>
                        </div>

                        <div class="form-group">
                            <label for="ParticipanteId">Selecciona un participante:</label>
                            <select class="form-control" id="ParticipanteId" asp-for="NuevoParticipanteId">
                                @foreach (var participante in Model.Participantes)
                                {
                                    <option value="@participante.Id">@participante.NombreCompleto</option>
                                }
                            </select>
                        </div><br>

                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="ConfirmacionAsistencia" asp-for="ConfirmacionAsistencia" required>
                            <label class="form-check-label" for="ConfirmacionAsistencia">Confirmar Asistencia</label>
                        </div><br>

                        <button type="submit" class="btn btn-primary">Registrar Asistencia</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
